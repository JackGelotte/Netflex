<Page x:Class="FlexApp.Franco1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlexApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1030"
      Title="Franco1">

    <ScrollViewer>
        <ScrollViewer.Effect>
            <DropShadowEffect/>
        </ScrollViewer.Effect>
        <Grid Name="MovieGrid" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="343.333333333"/>
                <ColumnDefinition Width="343.333333333"/>
                <ColumnDefinition Width="343.333333333"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="350"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="350"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="10" Grid.Column="3" Content="Previous"
                    Click="Click_Previous"/>
            <Button Grid.Row="10" Grid.Column="3" Content="Next"
                    Click="Click_Next"/>
        </Grid>
    </ScrollViewer>
</Page>
