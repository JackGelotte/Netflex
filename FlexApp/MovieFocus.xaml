<Window x:Class="FlexApp.MovieFocus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlexApp"
        mc:Ignorable="d"
        Title="MovieDetailRental" Height="450" Width="800" 
        WindowStyle="None" AllowsTransparency="True" Background="Black"
        BorderBrush="DarkRed" BorderThickness="2" 
        Closing="Window_Closing" >
    <Grid Height="450" Width="800" >
        <Image Name="MoviePoster" Margin="40,40,419,40" />
        <TextBlock Name="MovieInfo" Margin="380,133,167,50" />
        <Button Content="Rent" Margin="630,330,0,0" Click="Rent_Button_Click" Height="30" Width="100"/>
        <ComboBox Name="DaysActiveSelectionMjo"
                  SelectedIndex="0"
                      ItemsSource="{Binding DaysActiveSelection}"
                      DisplayMemberPath="DaysActive"
                      SelectedValuePath="DaysActive"
                      DropDownClosed="DaysActiveSelectionMjo_DropDownClosed"
                      Height="30" Width="100" Margin="630,250,0,0"
                      >

            

        </ComboBox>
    </Grid>
</Window>
