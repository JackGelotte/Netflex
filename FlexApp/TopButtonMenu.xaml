<UserControl x:Class="FlexApp.TopButtonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlexApp"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid>

        <Button Name="LoginButton" Click="Left_Click" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30"  Width="120" Cursor="Wait">
            <StackPanel HorizontalAlignment="Stretch">
                <TextBlock Name="LeftButtom" HorizontalAlignment="Left" Text="Login" FontSize="20"/>
            </StackPanel>
        </Button>
        <Button Name="RegisterButton" Click="Right_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30"  Width="120" Cursor="Wait">
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Name="RightButton" HorizontalAlignment="Left" Text="Register" FontSize="20"/>
                </StackPanel>
            </Button>
        
    </Grid>
</UserControl>
