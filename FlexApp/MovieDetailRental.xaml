<Window x:Class="FlexApp.MovieDetailRental"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlexApp"
        mc:Ignorable="d"
        Title="MovieDetailRental" Height="450" Width="800">
    <Grid>

        <Image Name="MoviePoster" Margin="0,0,419,0" />
        <TextBlock Name="MovieInfo" Margin="453,87,94,47" />
        <Button Content="Rent" Margin="711,90,18,50" Click="Rent_Button_Click" />
        <ComboBox Name="DaysActiveSelectionMjo" 
                      HorizontalAlignment="Left" Width="120" 
                      ItemsSource="{Binding DaysActive}"
                      DisplayMemberPath="DaysActive"
                      SelectedValuePath="DaysActive"
                      Height="27" Margin="648,55,0,352"
                      />
    </Grid>
</Window>
